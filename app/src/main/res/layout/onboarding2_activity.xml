<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    tools:context="com.farmwiseai.myapplicationqna.Onboarding1">




    <ScrollView android:id="@+id/android_large__1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgclr">

            <ImageView
                android:id="@+id/bg2"
                android:layout_width="match_parent"
                android:layout_height="548dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/imageslider2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Know all the government\n schemes available "

                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:text="Get all your questions answered here!"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Continue"
                android:id="@+id/get_started_button1"
                android:background="@drawable/button_background"
                android:textColor="@color/bgclr"
                android:textSize="18sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Skip"
                android:id="@+id/skip_button1"
                android:background="@color/bgclr"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</HorizontalScrollView>


